{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}/out/${fileBasenameNoExtension}.exe",
                "-g",
                "-Wall",
                "-std=c++17",
                "-I",
                "${workspaceFolder}/OpenGL/freeglut/include",
                "-I",
                "${workspaceFolder}/OpenGL/glew/include",
                "-L",
                "${workspaceFolder}/OpenGL/freeglut/lib",
                "-L",
                "${workspaceFolder}/OpenGL/glew/lib/Release/Win32",
                "-static-libgcc",
                "-lfreeglut",
                "-lglew32",
                "-lopengl32",
                "-lglu32"
            ]
        }
    ]
}